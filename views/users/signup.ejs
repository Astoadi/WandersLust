<% layout('/layouts/boilerplate.ejs')  %>

<div class="row mt-3">
    <h1 class="col-6 offset-2">SignUp on WanderLust</h1>
    <div class="col-6 offset-2">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input class="form-control" type="text" name="username" id="username" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Enter a suitable username!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input class="form-control" type="text" name="email" id="email" required>
                <div class="invalid-feedback">Enter a suitable Email!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input class="form-control" type="password" name="password" id="password" required>
                <div class="invalid-feedback">Enter a suitable password!</div>
            </div>
            <button class="btn btn-success" type="submit">SignUp</button>
        </form>
    </div>
</div>